#!/bin/bash

# Test Call Script - Dials your phone number for quick testing
# Usage: ./testcall

# Your phone number (change this to your number)
PHONE_NUMBER="+1234567890"
FIRST_NAME="Test"

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
CYAN='\033[0;36m'
NC='\033[0m'

echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
echo -e "${BLUE}   xAI Grok Voice Agent - Phone Test Call${NC}"
echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
echo ""

# Check if control service is running
if ! docker ps --format '{{.Names}}' | grep -q "Livekit-Henryk-Control"; then
    echo -e "${RED}Control service is not running${NC}"
    echo "Start it with: docker compose up -d control"
    exit 1
fi

echo -e "Dialing ${CYAN}$PHONE_NUMBER${NC} ($FIRST_NAME)..."
echo ""

# Make request to control service
RESPONSE=$(curl -s -X POST http://localhost:9001/dial-lead \
  -H "Content-Type: application/json" \
  -d "{
    \"phone_number\": \"$PHONE_NUMBER\",
    \"first_name\": \"$FIRST_NAME\",
    \"initial_greeting\": true
  }")

# Check if request was successful
if echo "$RESPONSE" | grep -q "success"; then
    ROOM_NAME=$(echo "$RESPONSE" | python3 -c "import sys, json; print(json.load(sys.stdin)['room_name'])" 2>/dev/null)
    SIP_CALL_ID=$(echo "$RESPONSE" | python3 -c "import sys, json; print(json.load(sys.stdin)['sip_call_id'])" 2>/dev/null)

    echo -e "${GREEN}Call initiated successfully!${NC}"
    echo ""
    echo -e "Room: ${CYAN}$ROOM_NAME${NC}"
    echo -e "SIP Call ID: ${CYAN}$SIP_CALL_ID${NC}"
    echo ""
    echo -e "${YELLOW}Your phone should be ringing...${NC}"
    echo ""
    echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
    echo -e "Agent: ${CYAN}test_agent${NC} (Rachel - xAI Grok on LiveKit Cloud)"
    echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
else
    echo -e "${RED}Failed to initiate call${NC}"
    echo ""
    echo "Response: $RESPONSE"
    echo ""
    echo "Make sure:"
    echo "  1. Control service is running: docker compose up -d control"
    echo "  2. SIP trunk is configured (LIVEKIT_SIP_TRUNK_ID in .env)"
    echo "  3. Twilio phone number is set (TWILIO_PHONE_NUMBER in .env)"
    exit 1
fi
