#!/bin/bash

# Test Call Script for xAI Grok Voice Agent
# Creates a room and provides URL + Token for joining via LiveKit Meet

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
echo -e "${BLUE}   xAI Grok Voice Agent - Test Call${NC}"
echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
echo ""

# Check if control service is running
if ! docker ps --format '{{.Names}}' | grep -q "Livekit-Henryk-Control"; then
    echo -e "${RED}Control service is not running${NC}"
    echo "Start it with: docker compose up -d --build"
    exit 1
fi

echo "Creating test call room..."
echo ""

# Make request to control service (port 9001)
RESPONSE=$(curl -s -X POST http://localhost:9001/test-call)

# Check if request was successful
if echo "$RESPONSE" | grep -q "success"; then
    echo -e "${GREEN}Room created successfully!${NC}"
    echo ""

    # Extract values using python
    ROOM_NAME=$(echo "$RESPONSE" | python3 -c "import sys, json; print(json.load(sys.stdin)['room_name'])" 2>/dev/null)
    LIVEKIT_URL=$(echo "$RESPONSE" | python3 -c "import sys, json; print(json.load(sys.stdin)['livekit_url'])" 2>/dev/null)
    TOKEN=$(echo "$RESPONSE" | python3 -c "import sys, json; print(json.load(sys.stdin)['token'])" 2>/dev/null)
    MEET_URL=$(echo "$RESPONSE" | python3 -c "import sys, json; print(json.load(sys.stdin)['meet_url'])" 2>/dev/null)

    echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
    echo -e "${BLUE}   Room Details${NC}"
    echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
    echo ""
    echo -e "Room: ${CYAN}$ROOM_NAME${NC}"
    echo -e "Agent: ${CYAN}test_agent${NC} (Rachel - xAI Grok)"
    echo ""

    echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
    echo -e "${BLUE}   Join the Call${NC}"
    echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
    echo ""
    echo -e "${YELLOW}Option 1: Open Meet URL directly${NC}"
    echo ""
    echo -e "${GREEN}$MEET_URL${NC}"
    echo ""
    echo -e "${YELLOW}Option 2: Manual join at https://meet.livekit.io${NC}"
    echo ""
    echo -e "${GREEN}URL:${NC}"
    echo "$LIVEKIT_URL"
    echo ""
    echo -e "${GREEN}Token:${NC}"
    echo "$TOKEN"
    echo ""

    echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
    echo -e "${BLUE}   Instructions${NC}"
    echo -e "${BLUE}═══════════════════════════════════════════════════════${NC}"
    echo ""
    echo "1. Copy the Meet URL above and open in browser"
    echo "2. Or go to https://meet.livekit.io and paste URL + Token"
    echo "3. Allow microphone access"
    echo "4. Talk to Rachel (xAI Grok voice agent)"
    echo ""

else
    echo -e "${RED}Failed to create test call${NC}"
    echo ""
    echo "Response: $RESPONSE"
    echo ""
    echo "Make sure:"
    echo "  1. Control service is running: docker compose up -d"
    echo "  2. Agent is registered with LiveKit Cloud"
    exit 1
fi
